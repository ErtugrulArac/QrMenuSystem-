// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String  @unique
  ename String
  category Categories @relation(fields: [categoryId], references: [id])
  categoryId String @db.ObjectId
  image String
  price Int
  description String?
  edescription String?
}
model Categories{
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String  @unique
  ename String 
  image String 
  products Products[]
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
}

model Table {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  code        String  @unique
  status      String  @default("closed") // "open" or "closed"
  currentOrder String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  tableCode   String
  items       Json     // Array of items with structure: {id, name, quantity, price, subtotal, cancelled?}
  subtotal    Float
  tax         Float
  total       Float
  status      String   @default("pending") // "pending", "confirmed", "paid", "rejected"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  paidAt      DateTime?
  
  @@index([tableCode])
  @@index([status])
}

model WaiterCall {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  tableCode   String
  message     String?
  status      String   @default("pending") // "pending", "resolved"
  createdAt   DateTime @default(now())
  resolvedAt  DateTime?
  
  @@index([tableCode])
  @@index([status])
}